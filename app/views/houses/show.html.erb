<p>
    <strong>物件名:</strong>
    <%= @house.name %>
</p>
<p>
    <strong>賃料:</strong>
    <%= @house.rent %>円
</p>
<p>
    <strong>住所:</strong>
    <%= @house.address %>
</p>
<p>
    <strong>築年数:</strong>
    <%= @house.age %>年
</p>
<p>
    <strong>備考:</strong>
    <%= @house.remarks %>
</p>
<p>
    <strong>最寄り駅数:</strong>
    <%= @house.stations.length %>駅
</p>
<hr>
<% x=1%>
<% @house.stations.each do |s| %>
<h4>最寄り駅<%= x %></h4>
        <p>
            <strong>路線名:</strong>
            <%= s.route %>
        </p>
        <p>
            <strong>駅名:</strong>
            <%= s.station_name %>
        </p>
        <p>
            <strong>徒歩分数:</strong>
            <%= s.mitutes %>分
        </p>
<% x += 1 %>
<% end %>


<%= link_to '編集', edit_house_path(@house) %> |
<%= link_to '戻る', houses_path %>


